# ScaleCast Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# PostgreSQL Configuration
# =============================================================================
POSTGRES_USER=scalecast
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=scalecast
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# =============================================================================
# AWS Configuration
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=scalecast-mlops

# =============================================================================
# Airflow Configuration
# =============================================================================
AIRFLOW_UID=50000
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__CORE__SQL_ALCHEMY_CONN=postgresql+psycopg2://scalecast:your_secure_password_here@postgres:5432/scalecast
AIRFLOW__CORE__FERNET_KEY=your_fernet_key_here
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__SECRET_KEY=your_webserver_secret_key_here

# =============================================================================
# MLflow Configuration
# =============================================================================
MLFLOW_TRACKING_URI=http://mlflow:5000
MLFLOW_S3_ENDPOINT_URL=https://s3.amazonaws.com
MLFLOW_ARTIFACT_ROOT=s3://scalecast-mlops/mlflow/

# =============================================================================
# API Configuration
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
